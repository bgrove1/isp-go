<p id="notice"><%= notice %></p>

<h1>Marketing Managers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Hours per lead</th>
      <th>Current Team Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @marketing_managers.each do |marketing_manager| %>
      <tr>
        <td><%= marketing_manager.first_name %></td>
        <td><%= marketing_manager.last_name %></td>
        <td class="center"><%= marketing_manager.hours_per_lead %></td>
        <td class="center"><%= marketing_manager.in_store_promoters.size %></td>
        <td><%= link_to 'Show', marketing_manager %></td>
        <td><%= link_to 'Edit', edit_marketing_manager_path(marketing_manager) %></td>
        <td><%= link_to 'Destroy', marketing_manager, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

