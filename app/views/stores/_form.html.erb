<%= form_for(store) do |f| %>
  <% if store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
      <% store.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :territory_id %>
    <%= f.select(:territory_id, Territory.all.map{|i| [i.name, i.id]}) %>
  </div>

  <div class="field">
    <%= f.label :store_number %>
    <%= f.number_field :store_number %>
  </div>

  <div class="field">
    <%= f.label :manager %>
    <%= f.text_field :manager %>
  </div>

  <div class="field">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>
  </div>



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
