<% @page_title = "Delete ISP"%>

<%= link_to("<< Back to List", in_store_promoters_path, :class => 'back-link') %>

<div class="in_store_promoters delete">
  <h2>Permanently Remove ISP from System</h2>

  <%= form_for(@in_store_promoter, :method => 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this person?</p>
    <p><strong>Warning: Action cannot be reversed</strong></p>

    <p class="reference-name"><%= f.object.firstname %></p>
    <p class="reference-name"><%= f.object.lastname %></p>
    <p class="reference-name"><%= f.object.territory %></p>

    <div class="form-buttons">
      <%= f.submit("Delete Subject") %>
    </div>

  <% end %>
</div>
